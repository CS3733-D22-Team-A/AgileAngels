<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane id="topBar" prefHeight="60.0" prefWidth="1280.0" styleClass="minimize" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.agileAngels.MainController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="770.0" spacing="30.0">
         <children>
            <Button mnemonicParsing="false" onAction="#goHome" styleClass="topBarIcon">
               <graphic>
                  <ImageView fitHeight="59.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/smallLogo.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button id="menuButton" fx:id="equipRequest" mnemonicParsing="false" onAction="#menuItem" prefHeight="30.0" prefWidth="163.0" text="Equipment Request" />
            <Button id="menuButton" fx:id="viewRequest" mnemonicParsing="false" onAction="#menuItem" prefHeight="30.0" prefWidth="127.0" text="Edit Requests" />
            <Button id="menuButton" fx:id="map" mnemonicParsing="false" onAction="#menuItem" prefHeight="30.0" prefWidth="68.0" text="Map" />
         </children>
         <padding>
            <Insets left="30.0" />
         </padding>
      </HBox>
      <Button layoutX="1199.0" layoutY="5.0" mnemonicParsing="false" onAction="#profile" prefHeight="36.0" prefWidth="38.0" styleClass="topBarIcon">
         <graphic>
            <ImageView fitHeight="34.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/icons/profile.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button graphicTextGap="0.0" layoutX="1020.0" layoutY="-5.0" mnemonicParsing="false" onAction="#goHome">
         <graphic>
            <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/logo.png" />
               </image>
            </ImageView>
         </graphic>
         <styleClass>
            <String fx:value="image" />
            <String fx:value="topBarIcon" />
         </styleClass>
      </Button>
      <Button fx:id="back" layoutX="20.0" layoutY="656.0" mnemonicParsing="false" onAction="#back" prefHeight="44.0" prefWidth="104.0" styleClass="topButton">
         <graphic>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/icons/back.png" />
                     </image>
                  </ImageView>
                  <Label text="Back">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </graphic>
      </Button>
      <Button fx:id="close" layoutX="1136.0" layoutY="656.0" mnemonicParsing="false" onAction="#closeApp" prefHeight="44.0" prefWidth="124.0" styleClass="topButton">
         <graphic>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label text="Close App">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </graphic>
      </Button>
   </children>
</Pane>
