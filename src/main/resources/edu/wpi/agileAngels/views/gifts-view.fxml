<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.agileAngels.GiftsController">
   <children>
      <Label layoutX="219.0" layoutY="14.0" prefHeight="51.0" prefWidth="162.0" text="Gift Request" textAlignment="CENTER">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <Label layoutX="106.0" layoutY="55.0" prefHeight="51.0" prefWidth="388.0" text="Fill out the following information Detailing the gift" textAlignment="CENTER">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
      <Label layoutX="48.0" layoutY="96.0" prefHeight="51.0" prefWidth="43.0" text="Sender:">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label layoutX="319.0" layoutY="96.0" prefHeight="51.0" prefWidth="62.0" text="Recipient:" textAlignment="CENTER">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label layoutX="37.0" layoutY="135.0" prefHeight="51.0" prefWidth="54.0" text="Message:" textAlignment="CENTER">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <TextField fx:id="giftSender" layoutX="98.0" layoutY="109.0" prefHeight="26.0" prefWidth="150.0" />
      <TextField fx:id="giftRecipient" layoutX="382.0" layoutY="109.0" />
      <TextField fx:id="giftMessage" alignment="TOP_LEFT" layoutX="98.0" layoutY="154.0" prefHeight="108.0" prefWidth="150.0" />
      <Button fx:id="giftSubmit" layoutX="235.0" layoutY="289.0" mnemonicParsing="false" onAction="#submitGift" prefHeight="51.0" prefWidth="130.0" text="Submit">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <MenuButton fx:id="giftType" layoutX="411.0" layoutY="154.0" mnemonicParsing="false" text="Select a Gift">
        <items>
           <MenuItem fx:id="balloons" mnemonicParsing="false" onAction="#setGiftType" text="Balloons" />
           <MenuItem fx:id="flowers" mnemonicParsing="false" onAction="#setGiftType" text="Flowers" />
        </items>
      </MenuButton>
      <Button fx:id="homeButton" layoutX="249.0" layoutY="353.0" mnemonicParsing="false" onAction="#goHome" text="Return to Home" />
      <Label fx:id="giftConfirm" layoutX="392.0" layoutY="270.0" prefHeight="78.0" prefWidth="162.0" wrapText="true" />
      <Label layoutX="290.0" layoutY="212.0" prefHeight="17.0" prefWidth="91.0" text="Enter Employee:" />
      <TextField fx:id="giftEmployeeText" layoutX="382.0" layoutY="208.0" />
      <Button fx:id="clear" layoutX="541.0" layoutY="14.0" mnemonicParsing="false" onAction="#clearPage" text="Clear" />
   </children>
</AnchorPane>
