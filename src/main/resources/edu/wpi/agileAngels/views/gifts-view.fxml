<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.agileAngels.Acontroller">
   <children>
      <Label layoutX="219.0" layoutY="22.0" prefHeight="51.0" prefWidth="162.0" text="Gift Request" textAlignment="CENTER">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <Label layoutX="106.0" layoutY="73.0" prefHeight="51.0" prefWidth="388.0" text="Fill out the following information Detailing the gift" textAlignment="CENTER">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
      <Label layoutX="40.0" layoutY="113.0" prefHeight="51.0" prefWidth="47.0" text="Sender:" textAlignment="CENTER">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label layoutX="318.0" layoutY="113.0" prefHeight="51.0" prefWidth="62.0" text="Recipient:" textAlignment="CENTER">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label layoutX="36.0" layoutY="152.0" prefHeight="51.0" prefWidth="54.0" text="Message:" textAlignment="CENTER">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <TextField fx:id="giftSender" layoutX="92.0" layoutY="126.0" />
      <TextField fx:id="giftRecipient" layoutX="381.0" layoutY="126.0" />
      <TextField fx:id="giftMessage" alignment="TOP_LEFT" layoutX="91.0" layoutY="171.0" prefHeight="108.0" prefWidth="150.0" />
      <Button fx:id="giftSubmit" layoutX="235.0" layoutY="289.0" mnemonicParsing="false" onAction="#submitGift" prefHeight="51.0" prefWidth="130.0" text="Submit">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <MenuButton fx:id="giftType" layoutX="424.0" layoutY="171.0" mnemonicParsing="false" text="Select a Gift">
        <items>
          <MenuItem mnemonicParsing="false" text="Hospital Store Gift" />
          <MenuItem mnemonicParsing="false" text="Flowers" />
            <MenuItem mnemonicParsing="false" text="Other" />
        </items>
      </MenuButton>
      <Button fx:id="homeButton" layoutX="249.0" layoutY="353.0" mnemonicParsing="false" onAction="#openScene" text="Return to Home" />
   </children>
</AnchorPane>
