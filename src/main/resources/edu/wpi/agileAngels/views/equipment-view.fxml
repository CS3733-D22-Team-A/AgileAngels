<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.agileAngels.Acontroller">
   <children>
      <Label layoutX="194.0" layoutY="34.0" prefHeight="35.0" prefWidth="212.0" text="Equipment Request" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="homeButton" layoutX="248.0" layoutY="347.0" mnemonicParsing="false" onAction="#openScene" text="Return to Home" />
      <Button layoutX="246.0" layoutY="231.0" mnemonicParsing="false" onAction="#submitEquipment" text="Submit">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Label layoutX="68.0" layoutY="143.0" text="Select the type of equipment needed:" />
      <Label layoutX="326.0" layoutY="143.0" text="Enter the location for equipment delivery:" />
      <TextField fx:id="equipLocation" layoutX="361.0" layoutY="187.0" />
      <Label layoutX="44.0" layoutY="77.0" prefHeight="20.0" prefWidth="510.0" text="Please fill out the information below and then press the &quot;Submit Request&quot; button.">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <MenuButton fx:id="eqptDropdown" layoutX="84.0" layoutY="187.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="149.0">
        <items>
          <MenuItem fx:id="bed" mnemonicParsing="false" onAction="#setEquipmentType" text="Bed" />
          <MenuItem fx:id="recliner" mnemonicParsing="false" onAction="#setEquipmentType" text="Recliner" />
           <MenuItem fx:id="xray" mnemonicParsing="false" onAction="#setEquipmentType" text="X-Ray Machine" />
           <MenuItem fx:id="infusion" mnemonicParsing="false" onAction="#setEquipmentType" text="Infusion Pump" />
        </items>
      </MenuButton>
      <Label fx:id="equipmentConfirmation" layoutX="8.0" layoutY="302.0" prefHeight="20.0" prefWidth="583.0" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
      </Label>

   </children>
</AnchorPane>
