<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: F;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.agileAngels.Acontroller">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="334.0" layoutY="136.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../logo.png" />
         </image>
      </ImageView>
      <Label layoutX="36.0" layoutY="47.0" text="Please select the service you would like to request:">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="equipmentButton" layoutX="82.0" layoutY="125.0" mnemonicParsing="false" onAction="#openScene" prefHeight="30.0" prefWidth="160.0" text="Equipment Request">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="labButton" layoutX="82.0" layoutY="171.0" mnemonicParsing="false" onAction="#openScene" prefHeight="30.0" prefWidth="160.0" text="Lab Request">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="sanitationButton" layoutX="82.0" layoutY="220.0" mnemonicParsing="false" onAction="#openScene" prefHeight="30.0" prefWidth="160.0" text="Sanitation Request">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="foodButton" layoutX="82.0" layoutY="267.0" mnemonicParsing="false" onAction="#openScene" prefHeight="30.0" prefWidth="160.0" text="Meal Request">
