            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="giftButton" layoutX="82.0" layoutY="316.0" mnemonicParsing="false" onAction="#openScene" prefHeight="30.0" prefWidth="160.0" text="Gift Request">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="329.0" layoutY="304.0" mnemonicParsing="false" onAction="#closeApp" prefHeight="30.0" prefWidth="160.0" text="Close Application">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <MenuBar layoutX="43.0" layoutY="14.0">
        <menus>
          <Menu fx:id="equipmentMenu" mnemonicParsing="false" text="Equipment Request" />
            <Menu fx:id="labMenu" mnemonicParsing="false" text="Lab Request" />
            <Menu fx:id="sanitationMenu" mnemonicParsing="false" text="Sanitation Request" />
            <Menu fx:id="mealMenu" mnemonicParsing="false" text="Meal Request" />
            <Menu fx:id="giftMenu" mnemonicParsing="false" text="Gift Request" />
        </menus>
      </MenuBar>

   </children>
</AnchorPane>
